<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailBonActivity">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/detail_bon_rv"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        tools:listitem="@layout/list_transaksi_detail"
        app:layout_constraintBottom_toTopOf="@+id/total_transaksi_user"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/total_transaksi_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="100dp"
        android:text="TOTAL BON :"
        android:textColor="#FF0000"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/total_transaksi_user_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:text="@string/default_harga"
        android:textColor="#FF0000"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/total_transaksi_user"
        app:layout_constraintStart_toEndOf="@+id/total_transaksi_user"
        app:layout_constraintTop_toTopOf="@+id/total_transaksi_user" />


</androidx.constraintlayout.widget.ConstraintLayout>